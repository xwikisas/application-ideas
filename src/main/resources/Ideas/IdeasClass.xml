    <property>
      <code>require(['jquery', 'xwiki-meta'], function($,xm) {
  /**
   * The function used for voting. Changes the classes so each button will
   * have a given design according to the vote, changes the number of votes,
   * shows a notification in case of error or an empty response from server.
   */
  var vote = function(voteClass, againstClass, button) {
    var reflink = button.attr('class').split(' ')[1];
    var opp = button.data('opp');
    var refresh = button.data('ref');
    // Creating the url according to the space from where the request was made
    // and the type of action that is nedded.
    if(voteClass == 'voted-pro') {
      var addVote = 'addVote';
    } else {
      var addVote = 'addVoteOpp';
    }
    if(xm.document == 'Ideas.WebHome') {
      var docName = xm.space + '.' +
        button.parent().siblings('.doc_title').text() + '.' + xm.page;
    } else {
      var docName = xm.document;
    }
    var url = new XWiki.Document('IdeasVoteService', 'Ideas').getURL('get',
      ('xpage=plain&amp;outputSyntax=plain&amp;page='+docName+'&amp;action='+addVote));
    // Ajax request.
    $.ajax({
      url : url,
      success : function(response) {
        var voted = Array.from($('.' + reflink));
        var opponent = Array.from($('.' + opp));
        if(response.result) {
          voted.forEach( e =&gt; {
            if($(e).hasClass(voteClass)) {
              $(e).removeClass(voteClass);
            } else {
              $(e).addClass(voteClass);
            }
          });
          opponent.forEach( e =&gt; {
            $(e).removeClass(againstClass);
          });
          if(voteClass == 'voted-pro') {
            var nbv = response.nbvotes;
          } else {
            var nbv = response.nbagainst;
          }
          voted.forEach( e =&gt; {
            $(e).html(nbv);
          });
          if(!refresh) {
            location.reload();
          }
          else if(response.remove) {
            var nbdec = response.nbopp;
            opponent.forEach( e =&gt; {
              $(e).html(nbdec);
            });
          }
        } else {
          new XWiki.widgets.Notification(response.msg, 'error');
        }
      },
      error : function() {
        new XWiki.widgets.Notification(
          "$services.localization.render('ideas.ideasclass.vote.error')", 'error');
      }
    });
    return false;
  }
  $(window).on("load", function() {
    $('.xvote-pro').click(function() {
      vote('voted-pro', 'voted-con', $(this));
    });
    $('.xvote-con').click(function() {
      vote('voted-con', 'voted-pro', $(this));
    });
  });
});</code>
