#set($discard = $xwiki.jsx.use('Ideas.IdeasClass'))
#set($discard = $xwiki.ssx.use('Ideas.IdeasSheet'))
#set($limit = $xcontext.macro.params.limit)
##
#set($query = "from doc.object(Ideas.IdeasClass) as idea where doc.fullName &lt;&gt; 'Ideas.IdeasTemplate' order by doc.creationDate desc")
#set($results = $services.query.xwql($query).setLimit($limit).execute())
##
{{html wiki=true}}
  (% class="ideas-recent" %)
  (((
  #foreach($idea in $results)
    #set($document = $xwiki.getDocument($idea))
    #if($document.hasAccessLevel('view', $xcontext.user) == 'true')
      &lt;div class="ideas secondary"&gt;
        #if($xcontext.action == 'view')
          $document.display('nbvotes')
          $document.display('nbagainst')
        #end
        [[$document.title&gt;&gt;$idea]] $services.localization.render('ideas.author', ["[[$xwiki.getUserName($document.author, false)&gt;&gt;$document.author]]"]) $services.localization.render('ideas.date', [$xwiki.formatDate($document.date, 'dd/MM/yyyy hh:mm')])
        &lt;span class="hidden status" data-status="$document.status"&gt;&lt;/span&gt;
        &lt;span class="hidden fullName" data-reference="$document.documentReference"&gt;&lt;/span&gt;
      &lt;/div&gt;
    #end
  #end
  #if($results.size() == 0)
    (% class = "ideas secondary" %)((($services.localization.render('ideas.nofiles'))))
    #set($spaceReference = $services.model.resolveSpace('Ideas'))
    #if($services.security.authorization.hasAccess('edit', $spaceReference))
      (% class = "ideas" %)((([[$services.localization.render('ideas.addfiles')&gt;&gt;Ideas.WebHome]])))
    #end
  #else
    (% class = "ideas" %)((([[$services.localization.render('ideas.seeallfiles')&gt;&gt;Ideas.WebHome]])))
  #end
{{/html}}
{{/velocity}}</code>
